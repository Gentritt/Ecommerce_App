@{
	ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>e-Commerce</title>
	<link href="~/css/site1.css" rel="stylesheet" />
</head>
<body>
	<h2>E-Commerce</h2> 

	<div class="row">
		<div class="col-md-6">
			<div class="product-info">
				<img src="/images/VanGogh.jpg" />
				<h3>Mug</h3>
				<ul class="product-props">
					<li>Price: $10</li>
					<li>Artist: Van Gogh</li>
					<li>Title:</li>
					<li>Description: Self</li>
				</ul>
				<button class="btn btn-success" id="buyButton">Buy</button>
			</div>

			<div id="the-form">
				<form>
					<label>Your Name:</label>
					<br />
					<input />
					<br />
					<label>Email:</label>
					<br />
					<input type="email" />
					<br />
					<label>Subject :</label>
					<br />
					<input type="text" />
					<br />
					<label>Message: </label>
					<br />
					<textarea rows="4"></textarea>
					<br />
					<input type="submit" value="Send Message" />
				</form>
			</div>
			<div>
				<div id="logginToggle">Login</div>
				<form class="popup-form">
					<div>
						<label>Username</label>
						<input />
					</div>
					<div>
						<label>Password</label>
						<input type="password" />
					</div>
					<div>
						<input type="checkbox" />
						<label>Remember Me</label>
					</div>
					<div>
						<input type="submit" />
					</div>
				</form>
			</div>
		</div>
		<div class="col-md-12">
			<p>This is a fun site buying products</p>
		</div>
	</div>
	
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/index.js"></script>

</body>
</html>